<script>
    function Mostrar(aux) {
        $("#global").removeClass("hidden");
        $("#visualizacion").removeClass("hidden");
        $("#publicacion").removeClass("hidden");
        switch (aux) {
            case 1:
                $("#visualizacion").addClass("hidden");
                $("#publicacion").addClass("hidden");
                break;
            case 2:
                $("#global").addClass("hidden");
                $("#publicacion").addClass("hidden");
                break;
            case 3:
                $("#global").addClass("hidden");
                $("#visualizacion").addClass("hidden");
                break;
        }
    }
</script>
