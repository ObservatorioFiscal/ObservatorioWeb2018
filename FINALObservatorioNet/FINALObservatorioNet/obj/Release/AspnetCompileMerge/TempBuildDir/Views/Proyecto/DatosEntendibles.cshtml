                        <figure>
                            <img src="~/Content/images/noticia/@item.Imagen" class="img-fluid" />
                        </figure>
                    </div>
                    <div class="col-10">
                        <h5><a href="@item.Urldirecion">@item.Titulo</a></h5>
                        <p>
                            @item.Descripcion
                        </p>
                        <p class="text-left small">@item.Fecha</p>
                        <hr />
                    </div>
                }

            </div>
        </div>
    </div>

    <div class="col-md-8 hidden" id="Documentos">
        <div class="cuadro-contenido cuadro-padding-interno minproyecto">
            <h2 class="text-left">Documentos</h2>
            <h6 class="text-left">Archivos creados para este proyecto.</h6>
            <hr />
            <div class="row">
                <div class="col-md-4 rowdiv">
                    <div class="cuadro-contenido">
                        <p></p>
                        <h3 class="text-center">Principios de Rendición de Cuentas</h3>
                        <div class="cuadro-padding-interno">
                            <hr />
                            <p class="text-center">
                                <a href="http://observatoriofiscal.cl/Blog/category/principios/" class="btn" target="_blank">
                                    <i class="material-icons md-48 celeste">archive</i> Descarga
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 rowdiv">
                    <div class="cuadro-contenido">
                        <p></p>
                        <h3 class="text-center">Usabilidad de la Transparencia</h3>
                        <div class="cuadro-padding-interno">
                            <hr />
                            <p class="text-center">
                                <a href="http://www.observatoriofiscal.cl/ARCHIVOS/Biblioteca/Documento_de_trabajo_Usabilidad_transparencia_gasto_publico.pdf" class="btn" target="_blank">
                                    <i class="material-icons md-48 celeste">archive</i> Descarga
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

@section Scripts
    {
    <script>
        function slider(aux) {
            $('.slider-item').addClass("hidden");
            $('.slider-item:nth-child(' + aux + ')').removeClass("hidden");
            $('.slider-menu .nav-item:nth-child(' + aux + ')').addClass("active-top");

            $('.slider-menu .nav-item').removeClass("active-top");
            $('.slider-menu .nav-item:nth-child(' + aux + ')').addClass("active-top");

        }


        function menuproyecto(aux) {
            $('#Descripcion').addClass("hidden");
            $('#Objetivos').addClass("hidden");
            $('#Etapas').addClass("hidden");
            $('#noticias').addClass("hidden");
            $('#Documentos').addClass("hidden");
            switch (aux) {
                case 1:
                    $('#Descripcion').removeClass("hidden");
                    break;
                case 2:
                    $('#Objetivos').removeClass("hidden");
                    break;
                case 3:
                    $('#Etapas').removeClass("hidden");
                    break;
                case 4:
                    $('#noticias').removeClass("hidden");
                    break;
                case 5:
                    $('#Documentos').removeClass("hidden");
                    break;
            }

        }
    </script>
}