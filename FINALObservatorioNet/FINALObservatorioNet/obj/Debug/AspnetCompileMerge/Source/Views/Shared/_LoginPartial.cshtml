@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
    @Html.AntiForgeryToken()
        <ul class="nav men-top justify-content-center">
            <li class="nav-item">@Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })</li>
            <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
            <li class="nav-item">@Html.ActionLink("Secciones", "Index", "Secciones", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Noticias", "IndexNoticias", "Secciones", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
        </ul>
    }
}
else
{
    <ul class="nav men-top justify-content-center">
        @*<li class="nav-item">@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>*@
        <li class="nav-item">@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
