@model IEnumerable<FINALObservatorioNet.Models.Noticias>

@{
    ViewBag.Title = "Noticias";
}

<h2>Lista Noticias</h2>

<p>
    @Html.ActionLink("Agregar Nueva", "CreateNoticias")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Internas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdProyecto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Internas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdProyecto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditNoticias", new { id=item.IdNoticias }) |
            @*@Html.ActionLink("Delete", "Delete", new { id=item.IdNoticias })*@
        </td>
    </tr>
}
</table>
